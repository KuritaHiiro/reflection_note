<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2>ユーザー情報編集</h2>
    </div>
  </div>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li class="text-danger"><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @user, url: user_path, method: :patch do |f| %>
  <div class="row">
    <div class="col">
      <div class="field">
        <%= f.label "ニックネーム", class: "form-label" %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="field">
        <%= f.label "メールアドレス", class: "form-label" %><br>
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <div class="actions">
        <%= link_to "戻る", user_path, class: "btn btn-secondary mt-1" %>
        <%= f.submit "変更を保存", class: "btn btn-success mt-1" %>
      </div>
    </div>
  </div>

  <% end %>
</div>

