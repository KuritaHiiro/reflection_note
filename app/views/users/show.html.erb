<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2>ユーザー情報</h2>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <tr>
          <th>登録日</th>
          <td><%= @user.created_at.strftime('%Y/%m/%d') %></td>
        </tr>

        <tr>
          <th>ニックネーム</th>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <th>ノート数</th>
          <td><%= @user.notes.count %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <%= link_to "編集", edit_user_path, class: "btn btn-outline-info" %>
    </div>
  </div>
</div>

