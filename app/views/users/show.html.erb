<h2>ユーザー情報</h2>
<table>
  <tr>
    <th>登録日</th>
    <td><%= @user.created_at.strftime('%Y/%m/%d') %></td>
  </tr>

  <tr>
    <th>ニックネーム</th>
    <td><%= @user.name %></td>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>

  <tr>
    <th>ノート数</th>
    <td><%= @user.notes.count %></td>
  </tr>

  <tr>
    <td><%= link_to "編集", edit_user_path %></td>
  </tr>
</table>