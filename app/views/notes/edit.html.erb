<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2>ノート編集</h2>
      <% if @note.errors.any? %>
        <%= @note.errors.count %>件のエラーが発生しました
        <ul>
          <% @note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <%= form_with model: @note, url: note_path(@note.id), method: :patch do |f| %>
  <div class="row">
    <div class="col">
      <div class="field">
        <%= f.label "意見", class: "form-label" %><br>
        <%= f.text_area :opinion, class: "form-control mb-3" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="field">
        <%= f.label "経験", class: "form-label" %><br>
        <%= f.text_area :experience, class: "form-control mb-3" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="field">
        <%= f.label "感情", class: "form-label" %><br>
        <%= f.text_area :emotion, class: "form-control mb-3" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="field">
        <%= f.label "価値観", class: "form-label" %><br>
        <%= f.text_area :value, class: "form-control mb-3" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="actions">
        <%= link_to "戻る", note_path(@note.id), class: "btn btn-secondary mt-3" %>
        <%= f.submit "変更を保存", class: "btn btn-success mt-3" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
