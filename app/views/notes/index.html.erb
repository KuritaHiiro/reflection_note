<h2>ノート一覧</h2>

<table>
  <tr>
    <td>作成日</td>
    <td>意見</td>
    <td></td>
  </tr>

  <% @notes.each do |note| %>
  <tr>
    <td><%= note.created_at.strftime('%Y/%m/%d') %></td>
    <td><%= link_to note.opinion, note_path(note.id) %></td>
  </tr>
  <% end %>
</table>

<%= link_to "ノート作成", new_note_path %>