<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2><%= @book_mark.name %></h2>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <table class="table">
        <thead class="table-info">
          <tr>
            <th>作成日</th>
            <th>意見</th>
            <td></td>
          </tr>
        </thead>
        <tbody>
        <% @book_mark_details.each do |book_mark_detail| %>
          <tr>
            <td><%= book_mark_detail.note.created_at.strftime('%Y/%m/%d %H') %></td>
            <td><%= link_to book_mark_detail.note.opinion.truncate(20), note_path(book_mark_detail.note.id) %></td>
            <td><%= link_to "削除", book_mark_detail_path(book_mark_detail.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
